<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">


    <ViewFlipper
        android:id="@+id/vf"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:autoStart="true"
        android:flipInterval="3000">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/test_item1"
            tools:srcCompat="@drawable/test_item1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:srcCompat="@drawable/test_item2"
            tools:srcCompat="@drawable/test_item2" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/test_item3"
            tools:srcCompat="@drawable/test_item3" />
    </ViewFlipper>


</LinearLayout>